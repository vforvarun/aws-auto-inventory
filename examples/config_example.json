{
  "inventories": [
    {
      "name": "my-aws-inventory",
      "aws": {
        "region": [
          "ap-southeast-2"
        ],
        "organization": false,
        "role_name": "OrganizationAccountAccessRole"
      },
      "excel": {
        "transpose": true,
        "formatting": {
          "header_style": {
            "bold": true,
            "bg_color": "#4F81BD",
            "font_color": "#FFFFFF"
          }
        }
      },
      "sheets": [
        {
          "name": "EC2Instances",
          "service": "ec2",
          "function": "describe_instances",
          "result_key": ".Reservations[].Instances[] | {InstanceId, InstanceType, State: .State.Name, LaunchTime, PrivateIpAddress, PublicIpAddress, VpcId, SubnetId}",
          "parameters": {
            "Filters": [
              {
                "Name": "instance-state-name",
                "Values": [
                  "running"
                ]
              }
            ]
          }
        },
        {
          "name": "S3Buckets",
          "service": "s3",
          "function": "list_buckets",
          "result_key": "Buckets"
        },
        {
          "name": "IAMRoles",
          "service": "iam",
          "function": "list_roles",
          "result_key": "Roles"
        },
        {
          "name": "LambdaFunctions",
          "service": "lambda",
          "function": "list_functions",
          "result_key": "Functions"
        },
        {
          "name": "EBSVolumes",
          "service": "ec2",
          "function": "describe_volumes",
          "result_key": ".Volumes[] | {VolumeId, Size, VolumeType, State, AvailabilityZone, Encrypted, Iops, CreateTime, InstanceId: (.Attachments[0].InstanceId // null), Device: (.Attachments[0].Device // null), AttachmentState: (.Attachments[0].State // \"available\")}"
        }
      ]
    }
  ]
}